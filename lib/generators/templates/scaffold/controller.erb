	@Path("<%= "#{@path}/#{@model}.id/edit" %>")
	public <%= @model.capitalize %> edit(<%= @model.capitalize %> <%= @model %>) {
		return entityManager.find(<%= @model.capitalize %>.class, <%= @model %>.getId());
	}

	@Get
	@Path("<%= "#{@path}/#{@model}.id/show" %>")
	public <%= @model.capitalize %> show(<%= @model.capitalize %> <%= @model %>) {
		return  entityManager.find(<%= @model.capitalize %>, <%= @model %>.getId());
	}

	@Delete
	@Path("<%= @path %>")
	public void destroy(<%= @model.capitalize %> <%= @model %>) {
		entityManager.remove(entityManager.find(<%= @model.capitalize %>.class, <%= @model %>.getId()));
		result.use(Results.logic()).redirectTo(<%= @model.capitalize %>Controller.class).index();  
	}
}

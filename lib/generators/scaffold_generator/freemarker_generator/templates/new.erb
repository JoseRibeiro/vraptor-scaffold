<body>

<form action="<%= path %>" method="post">
<% @attributes.each do |att| -%>
  <div class="field">
    <%= att.name.capitalize %>:<br />
    <input type="text" name="<%= "#{@model}.#{att.name}" %>">
  </div>
<% end -%>
  <div class="actions">
    <input type="submit" value="create">
  </div>
</form>

<a href="<%= path %>">Back</a>
	
</body>
